<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity League.
    -->
    <changeSet id="20201229205927-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="league_id"
                                 baseTableName="league_team"
                                 constraintName="fk_league_team_league_id"
                                 referencedColumnNames="id"
                                 referencedTableName="league"/>

        <addForeignKeyConstraint baseColumnNames="team_id"
                                 baseTableName="league_team"
                                 constraintName="fk_league_team_team_id"
                                 referencedColumnNames="id"
                                 referencedTableName="team"/>
        
        <addForeignKeyConstraint baseColumnNames="league_id"
                                 baseTableName="league_season"
                                 constraintName="fk_league_season_league_id"
                                 referencedColumnNames="id"
                                 referencedTableName="league"/>

        <addForeignKeyConstraint baseColumnNames="season_id"
                                 baseTableName="league_season"
                                 constraintName="fk_league_season_season_id"
                                 referencedColumnNames="id"
                                 referencedTableName="season"/>
        
    </changeSet>
</databaseChangeLog>
